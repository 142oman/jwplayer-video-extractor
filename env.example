# Server Configuration
PORT=3000
NODE_ENV=production

# Application Settings
APP_NAME=JW Player Video Extractor
APP_VERSION=2.0.0

# Puppeteer Settings (using bundled Chromium - recommended for Ubuntu 24.04+)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false

# Additional Puppeteer options for server environments
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-gpu,--disable-software-rasterizer,--disable-background-timer-throttling,--disable-backgrounding-occluded-windows,--disable-renderer-backgrounding,--disable-features=TranslateUI,--disable-ipc-flooding-protection

# CORS Settings
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Performance
MAX_CONCURRENT_EXTRACTIONS=5
EXTRACTION_TIMEOUT=60000

# Security (optional)
# JWT_SECRET=your-secret-key-here
# API_KEY=your-api-key-here